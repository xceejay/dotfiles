#!/bin/sh 

videosdir="/home/joel/personal/videos/screenrecordings/"
format="mp4"

output=$(echo|dmenu -fn "iosevka-11" -nb black -sb "#260A35"  -p "name of output file?")

[ -z "$output" ] && output=$(date|sed s/\ /-/g)

format=$(printf "mp4\nmkv\ngif\nwebm"|dmenu -fn "iosevka-11" -nb black -sb "#260A35"  -p "what file format?") && audio=$(printf "true\nfalse"|dmenu -fn "iosevka-11" -nb black -sb "#260A35"  -p "audio?ğŸ”‰") && time=$(printf "0\n1\n2\n3\n4"|dmenu -fn "iosevka-11" -nb black -sb "#260A35"  -p "start in how many seconds?â²")


[ -z "$format" ] && exit 
[ -z "$audio" ] && exit 
[ -z "$time" ] && exit 

noaudio(){
  sleep "$time" ; notify-send "recording started without audioğŸ”‡" && ffmpeg -video_size 1920x1080  -framerate 25 -f x11grab -i :0.0 "$videosdir$output.$format"  ; echo "$videosdir$output.$format" | xclip  &&  notify-send "sucessfully recording To $videosdir$output.$formatğŸ”‡" 
}

audio(){

  sleep "$time" ; notify-send "recording started with audioğŸ”Š"  && ffmpeg -video_size 1920x1080 -framerate 25 -f x11grab -i :0.0 -f pulse -ac 2 -i default "$videosdir$output.$format" ; echo "$videosdir$output.$format" | xclip  &&  notify-send "sucessfully recording To $videosdir$output.$formatğŸ”Š" 


}



if [ "$audio" = "true" ] ; then 
  audio 
else
  noaudio
fi


#[ $audio = "true" ] && audio || noaudio 


